
<% if line_item == @current_item %>
	<tr id="current_item">
<% else %>
	<tr>
<% end %>

	<td><%= line_item.quantity %>&times;</td>
	<td><%= line_item.price %></td>
	<td><%= line_item.product.title %></td>
	<td class="item_price"><%= number_to_currency(line_item.total_price, unit: "RUB ") %></td>
	<td><%= link_to '-1', decrement_line_item_path(id: line_item, product_id: line_item.product_id), method: :post %></td>
	<td><%= link_to 'X', line_item, method: :delete,
      		data: { confirm: 'Are you sure?' } %></td>
</tr>
